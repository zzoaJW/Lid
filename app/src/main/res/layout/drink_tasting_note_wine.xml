<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lid_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/note_wi_img"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/note_wi_btn_back"
                app:srcCompat="@drawable/bottle" />

            <TextView
                android:id="@+id/note_wi_eng_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="English Alcohol Name"
                android:textColor="@color/font_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/note_wi_img" />

            <TextView
                android:id="@+id/note_wi_kr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="한글 술 이름"
                android:textColor="@color/font_default"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/note_wi_eng_name"
                app:layout_constraintTop_toBottomOf="@+id/note_wi_eng_name" />

            <TextView
                android:id="@+id/note_wi_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="0.0"
                android:textColor="@color/font_default"
                app:layout_constraintBottom_toBottomOf="@+id/img_wi_star"
                app:layout_constraintStart_toEndOf="@+id/img_wi_star"
                app:layout_constraintTop_toTopOf="@+id/img_wi_star" />

            <TextView
                android:id="@+id/note_wi_tasting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/space_separate_gray"
                android:paddingHorizontal="30dp"
                android:paddingVertical="20dp"
                android:text="테이스팅 내용"
                android:textColor="@color/font_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_wi_star" />

            <TextView
                android:id="@+id/note_wi_keep_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="보관 날짜"
                android:textColor="@color/font_default"
                app:layout_constraintBottom_toBottomOf="@+id/img_wi_keep_date"
                app:layout_constraintStart_toEndOf="@+id/img_wi_keep_date"
                app:layout_constraintTop_toTopOf="@+id/img_wi_keep_date" />

            <TextView
                android:id="@+id/note_wi_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="장소"
                android:textColor="@color/font_default"
                app:layout_constraintBottom_toBottomOf="@+id/img_wi_place"
                app:layout_constraintStart_toEndOf="@+id/img_wi_place"
                app:layout_constraintTop_toTopOf="@+id/img_wi_place" />

            <TextView
                android:id="@+id/note_wi_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="생산 국가 / 지역"
                android:textColor="@color/font_default"
                app:layout_constraintBottom_toTopOf="@+id/img_wi_price"
                app:layout_constraintStart_toEndOf="@+id/img_wi_region"
                app:layout_constraintTop_toTopOf="@+id/img_wi_region"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/note_wi_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="가격"
                android:textColor="@color/font_default"
                app:layout_constraintBottom_toBottomOf="@+id/img_wi_price"
                app:layout_constraintStart_toEndOf="@+id/img_wi_price"
                app:layout_constraintTop_toTopOf="@+id/img_wi_price"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/note_wi_posting_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="작성 날짜"
                android:textColor="@color/font_default"
                app:layout_constraintBottom_toBottomOf="@+id/img_wi_posting_date"
                app:layout_constraintStart_toEndOf="@+id/img_wi_posting_date"
                app:layout_constraintTop_toTopOf="@+id/img_wi_posting_date" />

            <TextView
                android:id="@+id/note_wi_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="술 종류"
                android:textColor="@color/font_gray"
                app:layout_constraintStart_toStartOf="@+id/note_wi_eng_name"
                app:layout_constraintTop_toBottomOf="@+id/note_wi_kr_name" />

            <ImageButton
                android:id="@+id/note_wi_btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="#00ff0000"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back" />

            <ImageButton
                android:id="@+id/btn_wi_del"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="#00ff0000"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="@color/font_gray"
                app:layout_constraintBottom_toBottomOf="@+id/note_wi_btn_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/note_wi_btn_back"
                app:srcCompat="@drawable/delete" />

            <ImageButton
                android:id="@+id/btn_wi_correct"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@color/font_gray"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/btn_wi_del"
                app:layout_constraintEnd_toStartOf="@+id/btn_wi_del"
                app:layout_constraintTop_toTopOf="@+id/btn_wi_del"
                app:srcCompat="@drawable/pencil" />

            <TextView
                android:id="@+id/img_wi_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="★"
                android:textColor="@color/lime"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/note_wi_eng_name"
                app:layout_constraintTop_toBottomOf="@+id/note_wi_type" />

            <ImageView
                android:id="@+id/img_wi_place"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:tint="@color/font_default"
                app:layout_constraintStart_toStartOf="@+id/img_wi_region"
                app:layout_constraintTop_toBottomOf="@+id/img_wi_price"
                app:srcCompat="@drawable/place" />

            <ImageView
                android:id="@+id/img_wi_posting_date"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:tint="@color/font_default"
                app:layout_constraintStart_toStartOf="@+id/img_wi_region"
                app:layout_constraintTop_toBottomOf="@+id/img_wi_place"
                app:srcCompat="@drawable/pencil" />

            <ImageView
                android:id="@+id/img_wi_keep_date"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:tint="@color/font_default"
                app:layout_constraintStart_toStartOf="@+id/img_wi_region"
                app:layout_constraintTop_toBottomOf="@+id/img_wi_posting_date"
                app:srcCompat="@drawable/open" />

            <ImageView
                android:id="@+id/img_wi_price"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:tint="@color/font_default"
                app:layout_constraintStart_toStartOf="@+id/img_wi_region"
                app:layout_constraintTop_toBottomOf="@+id/img_wi_region"
                app:srcCompat="@drawable/won" />

            <ImageView
                android:id="@+id/img_wi_region"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:tint="@color/font_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/note_wi_tasting"
                app:srcCompat="@drawable/world" />

            <View
                android:id="@+id/view200"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_wi_keep_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>